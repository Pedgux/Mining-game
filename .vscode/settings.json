{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"files.eol": "\n",
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
	"editor.formatOnType": true, // Automatically formats code after you type
	"editor.formatOnPaste": true, // Automatically formats code when you paste
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "always"
	}
}
